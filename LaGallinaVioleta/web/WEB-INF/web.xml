<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>controlador.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistro</servlet-name>
        <servlet-class>controlador.ServletRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletComprarProducto</servlet-name>
        <servlet-class>controlador.ServletComprarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCompra</servlet-name>
        <servlet-class>controlador.ServletCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPagar</servlet-name>
        <servlet-class>controlador.ServletPagar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBorrarCarrito</servlet-name>
        <servlet-class>controlador.ServletBorrarCarrito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistro</servlet-name>
        <url-pattern>/ServletRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletComprarProducto</servlet-name>
        <url-pattern>/ServletComprarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCompra</servlet-name>
        <url-pattern>/ServletCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPagar</servlet-name>
        <url-pattern>/ServletPagar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBorrarCarrito</servlet-name>
        <url-pattern>/ServletBorrarCarrito</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
